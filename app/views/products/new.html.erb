<div class="container">
  <div class="card">
    <div class="header">
      <h4 class="title"> Product Details </h4>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-5">
          <%=simple_form_for @product do |f| %>
            <%=f.error_notification %>
            <%=f.input :name %>
            <%=f.input :price %>
            <div class="modal-footer">
              <%=f.submit "Save Product", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="col-md-5">
        </div>
      </div>
    </div>
  </div>
</div>
