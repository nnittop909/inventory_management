$("ul.errors").html("")
<% if @member.errors.any? %>
  <% @member.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#member-modal").modal("hide")
  $("#order_user_id").load(location.href + " #order_user_id>*", "");
<% end %>
