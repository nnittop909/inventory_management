$("ul.errors").html("")
<% if @member.errors.any? %>
  <% @member.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#member-modal").modal("hide fade")
  window.location.reload();
  $("#select2-order_user_id-container").load(location.href + " #select2-order_user_id-container>*", "")
<% end %>


