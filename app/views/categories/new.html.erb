<div class="col-md-4 col-md-offset-4">
  <div class="card">
    <div class="header">
      <h4 class="title"> New Category Details </h4>
      <hr>
    </div>
    <div class="content">
      <%=simple_form_for @category do |f| %>
        <%= f.error_notification %>
        <%=f.input :name %>
        <%=f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
