<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header">
      <h4 class="box-title"> Generated ORs </h4>
    </div>
    <div class="box-body">
      <div class="table table-responsive">
        <table class="table table-striped">
          <tr>
            <th>Date </th>
            <th> OR </th>
            <th> Customer </th>
            <th> Amount </th>
          </tr>
          <tbody>
            <% OfficialReceiptNumber.all.each do |official_receipt_number| %>
              <tr>
                <td><%=official_receipt_number.date %></td>
                <td><%=link_to official_receipt_number.number, order_path(official_receipt_number.order) %></td>
                <td><%=official_receipt_number.order.try(:customer_name) %></td>
                <td><%=official_receipt_number.order.total_amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
