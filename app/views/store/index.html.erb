
  <div class="card">
    <div class="content">
      <div class="row">
        <div class="col-md-3">
          <ul class="nav navbar-nav">
                  <li class="dropdown">
                    <li class="dropdown">
                    <button href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" aria-expanded="false">All Products <b class="caret"></b></button>
                    <ul class="dropdown-menu dropdown-menu-right">
                      <li><%=link_to 'This Day'  %></li>
                      <li> <%=link_to 'This Week' %></li>
                      <li> <%=link_to 'This Month' %></li>
                    </ul>
                  </li>
                </ul>
        </div>

  <div class="col-md-3">
    <%=form_tag store_path, class: 'form-inline', method: :get do %>
      <div class="input-group stylish-input-group">
        <%=text_field_tag :name, params[:name], class: 'form-control border-input', placeholder: 'Search Inventory...' %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>

</div>
<hr>
<div class="row">
  <div class="col-md-6">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price </th>
          <th>Stock </th>
          <th>Quantity </th>
          <th></th>
        </tr>
    <% @products.each do |product| %>
      <tbody>
        <tr>
          <td><%=product.name %></td>
          <td><%=number_to_currency product.price %></td>
          <td><%=product.quantity.round%> <%=product.unit %></td>




              <%=simple_form_for @line_item do |f| %>
                    <td class="col-md-3">
                    <%=f.input :quantity, label: false %>

                    <%=f.input :product_id, input_html: {value: product.id }, as: :hidden %>
                  </td>
                  <td>
                    <% if  product.out_of_stock? %>
                      <span class="btn btn-danger btn-sm active"> Out of Stock </span>
                    <% else %>
                      <%=f.submit "Add to Cart", data: {disable_with: "Adding Product..."}, class: "btn btn-primary btn-sm active" %>
                    <% end %>
                  </td>

              <% end %>
          </tr>
        </tbody>
    <% end %>
  </table>
  </div>
  <div class="col-md-5 col-md-offset-1" id="cart">
    <%=render @cart %>
  </div>
</div>
</div>
</div>
</div>
</div>
