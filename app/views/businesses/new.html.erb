<div class="col-md-12">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title">About Business</h3>
      <br>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
          <%=simple_form_for @business do |f| %>
            <%=f.error_notification %>
            <%=f.input :name %>
            <%=f.input :tin %>
            <%=f.input :vat,  as: :boolean, label: 'VAT Registered', input_html: { class: 'inline'}  %>
            <%=f.input :proprietor %>
            <div class="modal-footer">
              <%=f.submit 'Save', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
