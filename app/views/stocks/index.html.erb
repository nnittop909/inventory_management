<div class="col-md-12">
  <div class="card">
      <div class="header">
          <h4 class="title">Purchases
            <span class="pull-right"> <%#=link_to "New Contractor", new_contractor_path, class: "btn btn-primary" %></span>
          </h4>
          <hr>
      </div>
      <div class="content">
        <div class="table table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date </th>
                <th> Quantity </th>
                <th> Product </th>
                <th> Amount </th>


              </tr>
            </thead>
            <tbody>
              <% @stocks.each do |stock| %>
                <tr>
                  <td><%= stock.date %></td>
                  <td><%= stock.quantity %></td>
                  <td><%= link_to stock.product.name, stock %></td>


                    <td><%= number_to_currency stock.purchase_price %>
                  </td>

                </tr>
              <% end %>
            </tbody>
          </table>
</div>
</div>
        </div>
</div>
